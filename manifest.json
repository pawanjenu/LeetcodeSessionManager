{
  "manifest_version": 2,
  "name": "LeetSessionManager",
  "description": "Manage leetcode sessions easily",
  "homepage_url": "https://github.com/pawanjenu/LeetcodeSessionManager",
  "version": "1.1.9",
  "author": "Pawan Jenu",
  "browser_action": {
    "default_icon": "assets/thumbnail.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/thumbnail.png",
    "48": "assets/thumbnail.png",
    "128": "assets/thumbnail.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://leetcode.com/*",
    "tabs",
    "unlimitedStorage",
    "storage",
    "cookies",
    "webRequest",
    "webRequestBlocking"
  ],
  "applications": {
    "gecko": {
      "id": "pawanjenu@gmail.com",
      "strict_min_version": "53.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*"
      ],
      "js": [
        "scripts/session.js",
        "scripts/leetcode.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": "script-src 'self' https://code.jquery.com/jquery-3.3.1.min.js https://github.com/login/oauth/authorize https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js; object-src 'self'"
}
